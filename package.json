{
  "name": "@feeds/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "refresh": "pnpm --filter @feeds/scripts run refresh",
    "dev": "pnpm --filter @feeds/website run dev",
    "build": "pnpm --filter @feeds/website run build",
    "preview": "pnpm --filter @feeds/website run preview",
    "astro": "pnpm --filter @feeds/website run astro",
    "format": "prettier --write",
    "test": "run-s test:*",
    "test:types": "pnpm --filter @feeds/website run astro check",
    "test:lint": "eslint --report-unused-disable-directives",
    "test:unit": "vitest",
    "test:unit:coverage": "pnpm run test:unit --coverage",
    "test:e2e": "playwright test",
    "test:e2e:update-snapshots": "run-s test:e2e:update-snapshots:*",
    "test:e2e:update-snapshots:host": "pnpm run test:e2e --update-snapshots",
    "test:e2e:update-snapshots:linux": "docker run -it --rm --ipc=host -v \"${PWD}:/var/app\" mcr.microsoft.com/playwright:v1.51.0-noble /bin/bash -c 'cd /var/app; export CI=true; npm i -g corepack; corepack enable; pnpm i; pnpm playwright install; pnpm run test:e2e --update-snapshots'",
    "test:lhci": "pnpm --package @lhci/cli dlx lhci autorun",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{astro,cjs,css,js,json,md,mjs,ts}": "pnpm run format",
    "*.{astro,cjs,js,mjs,ts}": "pnpm run test:lint"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@playwright/test": "1.51.0",
    "@tsconfig/node22": "22.0.0",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.13.10",
    "@vitest/coverage-v8": "3.0.8",
    "@vitest/eslint-plugin": "1.1.37",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-license-header": "0.8.0",
    "eslint-plugin-playwright": "2.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "listr2": "8.2.5",
    "memfs": "4.17.0",
    "npm-run-all2": "7.0.2",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "typescript": "5.8.2",
    "typescript-eslint": "8.26.1",
    "vitest": "3.0.8"
  },
  "packageManager": "pnpm@10.6.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
