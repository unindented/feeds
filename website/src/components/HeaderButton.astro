import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button">;

const { class: className, ...otherProps } = Astro.props;
---

<button
  {...otherProps}
  type="button"
  class:list={[
    className,
    "bg-uwu-mantle hover:bg-uwu-crust group flex cursor-pointer items-center justify-center rounded-md transition-colors",
  ]}
>
  <slot />
</button>
