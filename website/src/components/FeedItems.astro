import type { CollectionEntry } from "astro:content";

import FeedItem from "./FeedItem.astro";

interface Props {
  heading: string;
  feedItems: CollectionEntry<"feedItems">[];
  shouldShowFeedNames: boolean;
}

const { heading, feedItems, shouldShowFeedNames } = Astro.props;
---

<h1 class="text-uwu-mauve mb-12 text-balance text-3xl font-bold lg:text-4xl">
  {heading}
</h1>
<ol class="flex flex-col gap-5 lg:gap-7 xl:gap-9">
  {
    feedItems.map((feedItem) => (
      // eslint-disable-next-line @typescript-eslint/no-unsafe-return
      <li>
        <FeedItem
          feedItem={feedItem}
          shouldShowFeedName={shouldShowFeedNames}
        />
      </li>
    ))
  }
</ol>
